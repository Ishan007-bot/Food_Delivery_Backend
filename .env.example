# Food Delivery System - Environment Variables Template
# Copy this file to .env and update with your actual values

# ===== Spring Profile =====
SPRING_PROFILE=dev

# ===== Database Configuration =====
DB_URL=jdbc:postgresql://localhost:5432/food_delivery_db
DB_USERNAME=postgres
DB_PASSWORD=your_database_password
DDL_AUTO=update
SHOW_SQL=true

# ===== JWT Configuration =====
# IMPORTANT: Generate a strong secret key for production (minimum 256 bits)
# You can generate one using: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-256-bits
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# ===== Email Configuration =====
# For Gmail, you need to enable "App Passwords" in your Google Account
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# ===== File Upload Configuration =====
FILE_UPLOAD_DIR=./uploads
FILE_MAX_SIZE=5242880
MAX_FILE_SIZE=5MB
MAX_REQUEST_SIZE=10MB

# ===== Rate Limiting Configuration =====
RATE_LIMIT_ENABLED=true
LOGIN_RATE_LIMIT=5
ORDER_RATE_LIMIT=10
GENERAL_RATE_LIMIT=100

# ===== Server Configuration =====
SERVER_PORT=8080

# ===== CORS Configuration =====
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true

# ===== Logging Configuration =====
LOG_LEVEL=INFO
APP_LOG_LEVEL=DEBUG
WEB_LOG_LEVEL=DEBUG
SECURITY_LOG_LEVEL=DEBUG
SQL_LOG_LEVEL=DEBUG
SQL_PARAM_LOG_LEVEL=TRACE

# ===== Payment Gateway Configuration (Add in Phase 7) =====
# RAZORPAY_KEY_ID=your_razorpay_key_id
# RAZORPAY_KEY_SECRET=your_razorpay_key_secret
# STRIPE_API_KEY=your_stripe_api_key
# STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# ===== External API Configuration (Optional) =====
# GOOGLE_MAPS_API_KEY=your_google_maps_api_key
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=your_twilio_phone_number
